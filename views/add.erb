    <div class="form-group">
      <select class="form-control" name="annee" onchange="getSection(this.value)">
        <% (1..5).each do |i| %>
        <option><%= i %></option>
        <% end %>
      </select>
    
    </div>
    <div class="form-group">
    
      <select class="form-control" name="section" id="sect" >
        <option>choisi ta classe -_-</option>
      </select>
    </div>

